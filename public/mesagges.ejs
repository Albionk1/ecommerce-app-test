<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mesazhet</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="./assets/css/sidebar.css">
    <link rel="stylesheet" href="./assets/css/messages.css">
</head>

<body>

    <%- include('aside'); -%>

        <!-- end of aside --->

        <main>
            <div class="recent-orders">
                <div class="first">
                    <div class="first-header">
                        <form action="#">
                            <div><span class="material-symbols-sharp">search</span></div>
                            <input type="search" name="search" id="search" placeholder="Kerko Emrin ose Email...">
                        </form>
                    </div>
                    <div class="first-body">

                        <%for (var i=0;i<users.length;i++){if(!(user.id===users[i]._id )){%>
                            <a href="http://localhost:3000/mesagges?username=<%= user.username%>&room=">
                                <div class="first-body-1">
                                    <div class="profile-photo">
                                        <img src="http://localhost:3000/image/<%= users[i]._id %> " alt="">
                                    </div>
                                    <div class="text">
                                        <div class="first-line">
                                            <h3>
                                                <%=users[i].name%>
                                            </h3>
                                            <small>Para 3 Oreve</small>
                                        </div>
                                        <div class="right-side-chat">
                                            <p>
                                                <%=users[i].email%>
                                            </p>

                                        </div>
                                    </div>
                                </div>
                            </a>

                            <%}}%>
                    </div>
                </div>
                <div class="second">
                    <div class="second-header">
                        <div class="profile-photo">
                            <img src="./assets/images/avatar-1.jpeg" alt="">
                        </div>
                        <div>
                            <a href="#"><span class="material-symbols-sharp">more_horiz</span></a>
                        </div>
                    </div>
                    <hr />

                    <div class="second-body">

                        <div class="second-body-up" id="second-body-up">
                        </div>

                        <div class="second-down">
                            <hr>
                            <form id="chat-form">

                                <div class="down-message">
                                    <input type="text" name="Mesazhi" id="msg" placeholder="Shkruaj Mesazh">
                                </div>


                                <div class="down-send">
                                    <div class="down-icons">
                                        <span class="material-symbols-sharp">attach_file</span>
                                        <span class="material-symbols-sharp">file_upload</span>
                                    </div>
                                    <div class="down-button">

                                        <button type="submit">Dergo</button>

                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </main>

        <!--end of main-->

        <%- include('right'); -%>
            <!--end of the top-->
            </div>
            </div>




            <script src="order.js"></script>
            <script src="main.js"></script>
            <script>
                var element = document.getElementById('second-body-up');
                element.scrollTop = element.scrollHeight;
            </script>
            <script>
                var goToSecondPage = document.getElementById('logout');
                goToSecondPage.addEventListener("click", function () {
                    document.location.href = 'logout';
                })
            </script>
</body>

</html>