<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard THANA DEV</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="./assets/css/sidebar.css">

    <link rel="stylesheet" href="./assets/css/porosite.css">
</head>

<body>


    <%- include('aside'); -%>
        <!-- end of aside --->

        <main>
            <div class="recent-orders">
                <div class="users">
                    <h2>Porosite</h2>
                    <a href="/porositereja">
                        <h2>Porosite E Reja</h2>
                    </a>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Emri I Porosise</th>
                            <th>Pershkrimi</th>
                            <th>qmimi</th>
                            <th>Emri i pranuesit</th>
                            <th>Addresa</th>
                            <th>Nr i telefonit</th>
                            <th>Ofertat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for (var i=0;i<porosit.length;i++){%>
                            <tr>
                                <td>
                                    <%=porosit[i].emriPorosis%>
                                </td>
                                <td>
                                    <%=porosit[i].pershkrimi%>
                                </td>
                                <td>
                                    <%=porosit[i].qmimi%>$
                                </td>
                                <td>
                                    <%=porosit[i].name%>
                                </td>
                                <td>
                                    <%=porosit[i].adresa%>
                                </td>
                                <td>
                                    <%=porosit[i].phone%>
                                </td>
                                <td>
                                    <%=porosit[i].Ofertat%>
                                </td>

                            </tr>

                            <%}%>

                    </tbody>
                </table>
                <div class="can-see">
                    <a href="#">Shfaqi te gjitha</a>

                </div>
                <div style="text-align: center;">
                    <%for (var i=0;i<(porosiLength)/2;i++){%>
                        <% if (i+1==pageNumber) {%>
                            <a style="padding: 9px;background-color:rgb(139, 32, 32) ;border-radius: 7px;margin: 0 5px;"
                                href="/porosite?page=<%= i+1 %>" type="submit">
                                <%=i+1 %>
                            </a>
                            <%} else {%>
                                <a style="padding: 9px;background-color:slategray ;border-radius: 7px;margin: 0 5px;"
                                    href="/porosite?page=<%= i+1 %>" type="submit">
                                    <%=i+1 %>
                                </a>
                                <%}}%>

                </div>
            </div>
        </main>

        <!--end of main-->

        <%- include('right'); -%>
            </div>





            <script src="main.js"></script>
            <script>
                var goToSecondPage = document.getElementById('logout');
                goToSecondPage.addEventListener("click", function () {
                    document.location.href = 'logout';
                })
            </script>
</body>

</html>