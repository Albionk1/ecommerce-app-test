<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard THANA DEV</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="./assets/css/sidebar.css">
    <link rel="stylesheet" href="./assets/css/perdoruesit.css">

</head>

<body>

    <%- include('aside'); -%>

        <!-- end of aside --->

        <main>
            <div class="recent-orders">
                <div class="users">
                    <h2>Perdoruesit</h2>
                    <a href="/perdiri">
                        <h2>Perdorues i Ri</h2>
                    </a>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Emri </th>
                            <th>Username</th>
                            <th>email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for (var i=0;i<users.length;i++){if(!(user.id===users[i]._id )){%>
                            <tr>
                                <td>
                                    <%=users[i].name%>
                                </td>
                                <td>
                                    <%=users[i].username%>
                                </td>
                                <td>
                                    <%=users[i].email%>
                                </td>
                                <td>
                                    <div>
                                        <form action="/room" method="post">
                                            <input type="hidden" id="room" name="userId" value="<%=user.id %>">
                                            <input type="hidden" id="room" name="otherUserId"
                                                value="<%=users[i]._id%>"><br>
                                            <button type="submit"
                                                class="btn btn-primary btn-block mb-3">Shkruaj</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <%}}%>

                    </tbody>
                </table>
                <div class="can-see">
                    <a href="#">Shfaqi te gjitha</a>
                </div>
            </div>
        </main>

        <!--end of main-->

        <%- include('right'); -%>
            </div>




            <!-- <script src="order.js"></script> -->
            <script src="main.js"></script>
            <script>
                var goToSecondPage = document.getElementById('logout');
                goToSecondPage.addEventListener("click", function () {
                    document.location.href = 'logout';
                })
            </script>
</body>

</html>